#left.outline-view
	#DocumentTitles
		ul#document-list	
			- for (var d in documents)
				li
					a(id='document-title-' + documents[d].id, href='/documents/' + documents[d].id)
						=documents[d].title
	ul.toolbar
		li
			a(href='/documents/new')
				+
		li
			a(href='#', id='delete-document')
				-
.content-divider
.content
	#editor-container
		textarea(name='d[data]', id='editor')
			=d && d.data ? d.data : ''
	ul#controls.toolbar
		li
			a#save-button(href='#') Save
.clear
